<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2B2D31">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

        <!-- Include Toolbar -->
        <include layout="@layout/toolbar_layout" />

        <!-- Container for Question 1 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_corner">

            <!-- Question 1 -->
            <TextView
                android:id="@+id/question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 1: Have you been feeling hopeless or like things won’t get better?"
                android:textSize="18sp"
                android:paddingLeft="8sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <!-- Radio Group 1 -->
            <RadioGroup
                android:id="@+id/answerGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/answerYes1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/answerNo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#000000" />
            </RadioGroup>
        </LinearLayout>

        <!-- Container for Question 2 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corner">

            <!-- Question 2 -->
            <TextView
                android:id="@+id/question2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 2: Have you had thoughts of ending your life?"
                android:textSize="18sp"
                android:paddingLeft="8sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <!-- Radio Group 2 -->
            <RadioGroup
                android:id="@+id/answerGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/answerYes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/answerNo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#000000" />
            </RadioGroup>
        </LinearLayout>

        <!-- Container for Question 3 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:layout_marginTop="8dp">

            <!-- Question 3 -->
            <TextView
                android:id="@+id/question3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 3: Have you ever thought that others would be better off without you?"
                android:textSize="18sp"
                android:paddingLeft="8sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <!-- Radio Group 3 -->
            <RadioGroup
                android:id="@+id/answerGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/answerYes3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/answerNo3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#000000" />
            </RadioGroup>
        </LinearLayout>

        <!-- Container for Question 4 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:layout_marginTop="8dp">

            <!-- Question 4 -->
            <TextView
                android:id="@+id/question4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 4: In the past few weeks, have you felt like life isn’t worth living?"
                android:textSize="18sp"
                android:textColor="#000000"
                android:paddingLeft="8sp"
                android:paddingBottom="8dp" />

            <!-- Radio Group 4 -->
            <RadioGroup
                android:id="@+id/answerGroup4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/answerYes4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/answerNo4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#000000" />
            </RadioGroup>
        </LinearLayout>

        <!-- Container for Question 5 -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:layout_marginTop="8dp">

            <!-- Question 5 -->
            <TextView
                android:id="@+id/question5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Question 5: Have you ever made a plan or thought about how you would end your life?"
                android:textSize="18sp"
                android:paddingLeft="8sp"
                android:textColor="#000000"
                android:paddingBottom="8dp" />

            <!-- Radio Group 5 -->
            <RadioGroup
                android:id="@+id/answerGroup5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/answerYes5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/answerNo5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textColor="#000000" />
            </RadioGroup>
        </LinearLayout>

        <!-- Submit Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/submitAnswersBtn"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="?attr/colorPrimary"
                android:text="Submit"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
